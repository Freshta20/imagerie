
<%- include('../partials/_head') %>
<main class="dark-theme container">
  <h1>Edit Photo</h1>
  <div class="row">
    <div class="col-sm-6">
    <form action="/albums/<%= photo.album %>/photos/<%= photo._id%>?_method=PUT" method="POST">
      <!-- <div>
        <label for="url">Url: </label>
        <br/>
        <input type="text" id="url" name="url" required value="<%= photo.url%>">
      </div> -->
      <div class="form-group">
        <label for="date">Date: </label>
        <br/>
        <input class="form-control" type="date" id="date" name="date" value="<%= photoDateString %>">
      </div>
      <div class="form-group">
        <label for="location">Location: </label>
        <br/>
        <input class="form-control" type="text" id="location" name="location" required value="<%= photo.location %>">
      </div>
      <div class="form-group">
        <label for="description">Description: </label>
        <br/>
        <textarea class="form-control" name="description" id="description" cols="30" rows="7" required><%= photo.description %></textarea>
      </div>
      <button type="submit">Submit</button>
      <a href="/albums/<%= photo.album %>/photos/<%= photo._id %>"><button>Cancel</button></a>
    </form>
  </div>
  </div>
</main>
<%- include('../partials/_footer') %>
