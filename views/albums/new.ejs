<%- include('../partials/_head') %>
<main class="dark-theme container">
  <h1>Add a New Album</h1>
  <div class="row">
    <div class="col-sm-6">

    <!--New Inputs-->
    <form action="/albums" method="POST">
      <!--Album Name-->
      <div class="form-group">
        <label for="albumName">Album Name: </label>
        <br />
        <input class="form-control" type="text" id="albumName" name="albumName" required>
      </div>
      <!--Date-->
      <div class="form-group">
        <label for="date">Date: </label>
        <br />
        <input class="form-control" type="date" id="date" name="date" required>
      </div>
      <!--Location-->
      <div class="form-group">
        <label for="location">Location: </label>
        <br />
        <input class="form-control" type="text" id="location" name="location" required>
      </div>
      <!--Description-->
      <div class="form-group">
        <label for="description">Description: </label>
        <br />
        <textarea class="form-control" name="description" id="description" cols="30" rows="7" required></textarea>
      </div>
      <!--Submit-->
      <button type="submit">Submit</button>
    </form>
    <!--Cancel button-->
    <a href="/albums"><button>Cancel</button></a>
    </div>
  </div>
</main>
<%- include('../partials/_footer') %>